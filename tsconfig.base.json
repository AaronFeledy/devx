{
    "compilerOptions": {
        // Base options inherited by all packages
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler", // Changed from node16/nodenext for better bun/monorepo support
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true, // Enable declaration file generation
        "declarationMap": true, // Generate sourcemaps for declarations
        "sourceMap": true, // Generate sourcemaps for JS files
        "noEmitOnError": true, // Don't emit if errors occur
        "allowImportingTsExtensions": false, // Usually false for libraries
        "noEmit": false, // Ensure emit is enabled by default
        "types": [
            "bun-types"
        ] // Add bun-types here

        // Consider adding paths for workspace aliases if needed later
        // "paths": {
        //   "@devx/*": ["./packages/*/src"]
        // }
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/dist"
    ]
}