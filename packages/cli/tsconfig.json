{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@devx/*": [
        "../*/src"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../recipes"
    },
    {
      "path": "../stack"
    },
    {
      "path": "../common"
    },
    {
      "path": "../devx"
    },
    {
      "path": "../builder"
    },
    {
      "path": "../engine"
    }
  ]
}
