{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "bin"
  ],
  "references": [
    // Add references to other packages cli depends on, e.g.:
    {
      "path": "../stack"
    },
    {
      "path": "../builder"
    },
    // { "path": "../engine" }
  ]
}
